Algoritmo ej2sem1_2
	Definir n1 como real;
	Escribir "Ingrese un numero para calcular si es mayor, menos o igual a 0";
	Leer n1;
	Si n1>0 Entonces
		Escribir "El numero ingresado es POSITIVO";
	FinSi
	Si n1=0 Entonces 
		Escribir "El numero ingresado es IGUAL que 0";
	FinSi
	Si n1<0 Entonces
		Escribir "El numero ingresado es NEGATIVO";
	FinSi
	
FinAlgoritmo
